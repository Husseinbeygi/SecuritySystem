<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">سیستم امنیتی</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-vertical-align-bottom" aria-hidden="true"></span> داشبورد داده ها
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/camera" Match="NavLinkMatch.All">
                <span class="oi oi-camera-slr" aria-hidden="true"></span> تصاویر دوربین ها
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/chat" Match="NavLinkMatch.All">
                <span class="oi oi-camera-slr" aria-hidden="true"></span> Chat
            </NavLink>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
