@page "/admin/camera/gallery/{hostaddress}"
@inject IWebHostEnvironment Environment
@inject NavigationManager navmanager
@using Blazored.Video
@using Blazored.Video.Support

<style>
    #thumnail-size {
        height: 150px;
        width: 266px;
        margin: 10px;
    }
</style>

<div class="row">

    @foreach (var item in filesModelImage)
    {
        <div class="col-md-3 col-sm-12">


            <div class="card">
                <img class="card-img-top" src="@item.FileName" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">@Path.GetFileName(@item.FileName)</p>
                    <p class="card-text">@item.FileCreationTime</p>

                </div>
            </div>

        </div>
    }
</div>

<hr />

<div class="row">

    @foreach (var item in filesModelVideo)
    {

        <div class="col-md-3 col-sm-12">
            <div class="card">
                <BlazoredVideo class="card-img-top" controls="controls">
                    <source src="@item.FileName" type="video/mp4" />
                </BlazoredVideo>
                <div class="card-body">
                    <p class="card-text">@Path.GetFileName(@item.FileName)</p>
                    <p class="card-text">@item.FileCreationTime</p>

                </div>
            </div>

        </div>

    }
</div>